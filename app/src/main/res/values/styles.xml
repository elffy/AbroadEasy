<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <!-- Base application theme. -->
    <style name="Theme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="navigation_bottom_radio">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:paddingBottom">2.0dip</item>
        <item name="android:paddingTop">2.0dip</item>
        <item name="android:textSize">11dip</item>
        <item name="android:textColor">@android:color/white</item>

    </style>

    <!-- Text style for tabs. -->
    <style name="ActionBarTabTextStyle" >
        <item name="android:textColor">@color/tab_title_text_color</item>
        <item name="android:textSize">@dimen/tab_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BlogItemTextButtonStyle" >
        <item name="android:textColor">@color/blog_text_button</item>
        <item name="android:textSize">@dimen/tab_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemTitleTextStyle" >
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>



</resources>
