<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="match_parent"
            android:layout_height="170dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_image"
            android:layout_marginLeft="16dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/image_home_discover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/button_discover"/>
            <ImageView
                android:id="@+id/image_home_favor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="164dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/image_home_favorite"/>
            <ImageView
                android:id="@+id/image_home_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/image_home_share"
                android:layout_gravity="center_vertical"
                android:paddingLeft="15dp"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>