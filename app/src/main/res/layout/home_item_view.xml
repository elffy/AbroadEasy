<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/item_info"
            android:background="@mipmap/image_home_test"
            android:layout_width="match_parent"
            android:layout_height="170dp">
            <ImageView
                android:id="@+id/item_image"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="170dp" />
            <TextView
                android:id="@+id/loaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:drawableLeft="@mipmap/ic_location"
                android:drawablePadding="4dp"
                android:text="Washington"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="4dp"
                android:layout_marginRight="8dp"
                android:paddingRight="4dp"
                android:paddingLeft="4dp"
                android:background="@mipmap/ic_time_bg"
                android:drawableLeft="@mipmap/ic_time"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:text="6 Weeks"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="16sp" />
        </RelativeLayout>>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_info"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_home_discover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:src="@mipmap/button_discover" />

            <ImageView
                android:id="@+id/image_home_favor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="164dp"
                android:src="@mipmap/image_home_favorite" />

            <ImageView
                android:id="@+id/image_home_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/image_home_share" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>