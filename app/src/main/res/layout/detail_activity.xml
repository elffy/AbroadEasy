<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:fillViewport="true"
        android:overScrollMode="always" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:src="@mipmap/detail_person"
                android:scaleType="centerCrop"
                android:id="@+id/detail_pic" />

            <LinearLayout
                android:id="@+id/middle_btns_layout"
                android:layout_width="match_parent"
                android:layout_marginTop="230dp"
                android:layout_height="42dp"
                android:orientation="horizontal" >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/article_heart"
                    android:id="@+id/btn_heart" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/article_more"
                    android:id="@+id/btn_more" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/article_star"
                    android:id="@+id/btn_star" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/article_question"
                    android:id="@+id/btn_question" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/content_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="272dp" >

                <WebView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/conent_webview"/>

            </FrameLayout>
        </FrameLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="42dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_back"
            android:id="@+id/btn_back" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_setting"
            android:id="@+id/btn_setting" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/btn_setting"
            android:layout_marginRight="10dp"
            android:src="@mipmap/article_message"
            android:id="@+id/btn_message" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/btn_message"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_phone"
            android:id="@+id/btn_phone" />
    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/appointment_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="65dp"
        android:layout_marginRight="10dp"
        android:clickable="true"
        android:src="@mipmap/ic_appointment_fb"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:fabSize="normal"
        app:layout_behavior="com.original.abroadeasy.widget.ScrollFABBehavior"
        app:layout_anchor="@id/scroll_view"
        app:layout_anchorGravity="bottom|right"
        app:pressedTranslationZ="12dp" />

</android.support.design.widget.CoordinatorLayout>
